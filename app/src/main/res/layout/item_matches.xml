<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:id="@+id/header_favorite_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#404040"
        android:visibility="gone">
        <ImageView
            android:id="@+id/ic_favorite_match"
            android:layout_marginLeft="5dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="1dp"
            android:layout_gravity="center"
            android:src="@drawable/champions_league"
            />
        <TextView
            android:id="@+id/txtwhatleague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_host_team"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Manchester United"
        android:gravity="center"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#737373"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txttimeStartMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01:00"
            android:gravity="center"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/txtTisoMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 - 1"
            android:gravity="center|top"
            android:textColor="#ff0"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_guest_team"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Manchester City"
        android:textColor="#fff"
        android:gravity="center"/>
        <ImageView
            android:id="@+id/ic_bell_match"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="4dp"
            android:background="#737373"
            android:src="@drawable/matches_bell"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>
