<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_item_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/tuananh"/>
        <ImageButton
            android:id="@+id/img_play_video"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_item_video"
            android:src="@drawable/ic_play"/>
    </FrameLayout>
    <TextView
        android:id="@+id/txt_content_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tuan Anh No No No"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_views"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_view"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="1k"
            android:textColor="#ececec"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@drawable/background_item_hot"
            />
        <Button
            android:id="@+id/btn_share_video"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_share"
            android:background="@drawable/background_item_hot"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:text="5"
            android:textColor="#ececec"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
