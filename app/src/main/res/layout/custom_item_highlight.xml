<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#b4b4b4">
    <LinearLayout
        android:id="@+id/layout_team_1"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        android:background="@drawable/custom_background">
        <LinearLayout
            android:id="@+id/layout_team_1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/team_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ronaldo"
                android:textSize="13sp"
                android:textColor="#fff"
                android:paddingRight="10dp"
                android:gravity="center|right" />

            <ImageView
                android:id="@+id/event_team_1"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:src="@drawable/icn_match_ycard"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_team_1_2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/team_1_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ronaldo"
                android:textSize="13sp"
                android:textColor="#fff"
                android:paddingRight="10dp"
                android:gravity="center|right" />

            <ImageView
                android:id="@+id/event_team_1_2"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:src="@drawable/icn_match_ycard"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/framly_minutes"
                android:layout_width="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"></FrameLayout>
            <TextView
                android:id="@+id/txt_minutes"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/custom_background_highlight_time"
                android:text="45'"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_team_2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4.5"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/custom_background">
            <LinearLayout
                android:id="@+id/layout_team_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/event_team_2_1"
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icn_match_rcard"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/team_2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ronaldo"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_team_2_2"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:minHeight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/event_team_2_2"
                    android:layout_width="10dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icn_match_rcard"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/team_2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ronaldo"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"/>
            </LinearLayout>

        </LinearLayout>


</LinearLayout>
