<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/img_item_news"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/anh2" />
        <TextView
            android:id="@+id/txt_content_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Doi tuyen Viet Nam da co chien thang ngoan muc de danh chiec ve cuoi cung den WorldCup 2018"
            android:textSize="17sp"
            android:textColor="#FFF"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_author_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By Tan Luan"
                android:textSize="15sp"
                android:textColor="#ececec"/>
            <TextView
                android:id="@+id/txt_time_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 minutes"
                android:textSize="15sp"
                android:textColor="#ececec"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_item_hot"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:divider="#fff">
            <Button
                android:id="@+id/btn_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_like"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="1k"
                android:textColor="#ececec"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/background_item_hot"
                />
            <Button
                android:id="@+id/btn_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_comment"
                android:background="@drawable/background_item_hot"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="10"
                android:textColor="#ececec"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share"
                android:background="@drawable/background_item_hot"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="5"
                android:textColor="#ececec"
                android:gravity="center_vertical"/>
        </LinearLayout>

</LinearLayout>
